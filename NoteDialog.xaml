<ContentDialog
    x:Class="InStelle.NoteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add or Edit Note"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel">
    <StackPanel Spacing="10">
        <TextBox x:Name="TitleTextBox" Header="Title" PlaceholderText="Enter note title..." />
        <TextBox x:Name="DescriptionTextBox" Header="Description" PlaceholderText="Enter note description..." AcceptsReturn="True" TextWrapping="Wrap" />
    </StackPanel>
</ContentDialog>
