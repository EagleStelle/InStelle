<Window
    x:Class="InStelle.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Note Taking App">
    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <!-- Bottom Bar for Tabs -->
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <ScrollViewer x:Name="ContentArea" Grid.Row="0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="NotesPanel" Orientation="Vertical" Margin="10"/>
        </ScrollViewer>

        <!-- Bottom Tab Bar -->
        <Border Grid.Row="1" Background="Orange">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel x:Name="TabPanel" Orientation="Horizontal">
                    <!-- Add Button for Tabs -->
                    <Button x:Name="AddTabButton" Content="+" Width="50" Height="50" Background="Pink" Click="AddTab_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
